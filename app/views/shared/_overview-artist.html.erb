<div class = "justify-content-center">
  <% if @event.photo.attached? %>
    <%= cl_image_tag @event.photo.key, height: 300, width: 200, crop: :fill %>
  <% else %>
    <%= image_tag "https://www.squeaker.net/image/event/event-placeholder-list.png", height: 150, width: 250, crop: :fill %>
  <% end %>
</div>

<div class="details">
  <h1><%= @event.date %></h1>
  <h3><%= @event.address %></h3>
</div>

<div class="map" style="width: 100%; height: 200px;"
data-controller="mapbox"
data-mapbox-markers-value="<%= @markers.to_json %>"
data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class="invitation">
<h3> Invitation </h3>
<%= simple_form_for [@event, @invitation] do |f| %>
  <%= f.text_field :user_id, label: 'Who are you looking for?' %>
  <%= f.input :content, placeholder: 'text' %>
  <%= f.submit "invite" %>
<% end %>
</div>

<div class ="options">
<%= link_to 'edit', edit_event_path %>
<%= link_to "delete", event_path(@event), method: :delete, data: {confirm: "Are you sure?"} %>
</div>
