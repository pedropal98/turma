<div class = "justify-content-center">
  <% if @event.photo.attached? %>
    <%= cl_image_tag @event.photo.key, height: 300, width: 200, crop: :fill %>
  <% else %>
    <%= image_tag "https://www.squeaker.net/image/event/event-placeholder-list.png", height: 150, width: 250, crop: :fill %>
  <% end %>
</div>

<div class="details">
  <h1><%= @event.date %></h1>
  <p><%= @event.performers %></p>
</div>

<div style="width: 100%; height: 200px;"
data-controller="mapbox"
data-mapbox-markers-value="<%= @markers.to_json %>"
data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class="invitation">
  <h3> Invitation </h3>
  <%= simple_form_for [@event, @invitation] do |f| %>
    <div class ="text_input">
      <%= f.text_field :user_id, label: 'Who are you looking for?' %>
    </div>
    <div>
      <%= f.input :content, placeholder: 'text' %>
    </div>
    <div>
      <%= f.submit "invite" %>
    </div>
  <% end %>
</div>

<div class = "options">
  <h3><%= link_to 'edit', edit_event_path %></h3>
  <h3><%= link_to "delete", event_path(@event), method: :delete, data: {confirm: "Are you sure?"} %></h3>
</div>
